payment_method = [CASH, CARD]

price = [1100, 600, 700]
drink = ["coke", "water", "coffee"]

cash_type   = [10000, 5000, 1000, 500, 100]
cash_output = {100 : 0, 500 : 0, 1000 : 0, 5000 : 0, 10000 : 0}

input_amount = integer(INPUT("투입 금액"))
input_drink  = integer(INPUT("음료 선택")) - 1
balance = 0


FUNCTION CashOutput(input_amount)
    FOR amount in length(range(cash_type))
        WHILE input_amount > amount
            cash_output[amount] += 1
            input_amount -= amount
    OUTPUT cash_output
    
FUNCTION VendingMachine(balance, input_amount, input_drink, payment_method)
    WHILE True
        input_amount += balance 
        IF payment_method == CARD THEN 
            IF CARD_BALANCE < price[input_drink] THEN
                OUTPUT "카드의 잔액이 부족합니다."
            ELSE 
                CARD_BALANCE -= price[input_drink]
                CARD_CONNECTION = False
                OUTPUT drink[input_drink]
                
        ELSE 
            IF input_amount < price[input_drink] THEN
                OUTPUT "금액이 부족합니다."
            ELIF
                input_amount -= price[input_drink]
                balance = input_amount
                OUTPUT [drink[input_drink], balance]
            
            IF INPUT("금액 반환 버튼") == True THEN
                IF input_amount == 0 THEN 
                OUTPUT "반환할 금액이 없습니다."
            ELSE
                balance = 0
                OUTPUT [CashOutput(input_amount), balance]